<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no">
  <meta name="referrer" content="no-referrer" />
  <title>Paradise City</title>
  <style>
    html,
    body {
      overflow-x: hidden;
    }

    .am-card-header-content {
      min-width: 90% !important;
    }

    p>img {
      width: 100% !important;
    }

    .huge {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
    }

    .hide {
      opacity: 0;
      z-index: -1;
      transition: all 1s ease-out;
    }
  </style>
  <link rel="shortcut icon" href="./huge.jpg" type="image/x-icon">
  <script>
    document.onreadystatechange = () => {
      document.readyState === 'complete' && document.querySelector('.huge').classList.add('hide');
    }
  </script>
</head>

<body>
  <div id="root"></div>
